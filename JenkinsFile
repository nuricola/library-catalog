pipeline {
    agent any

    stages {
        stage('Build & Test') {
            steps {
                // Если Linux/macOS
                sh 'mvn clean test'

                // Если Windows агент, раскомментировать:
                // bat 'mvn clean test'
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
        }
    }
}
